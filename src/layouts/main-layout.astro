---
import "~/styles/index.css";
import "~/styles/fonts.css";

import Drawer from "~/components/drawer.astro";
import Footer from "~/components/footer.astro";

const { title, description } = Astro.props;

const favicon =
  "data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>‚úçüèª</text></svg>";
---

<html lang="en" class="h-full w-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" href={favicon} />
    <!-- SEO -->
    <title>{title} | Beth Freeman</title>
    <meta name="description" content={description} />
  </head>
  <body
    class="flex h-full flex-col items-center justify-stretch bg-gradient-to-tr from-main-950 to-main-900 p-4"
  >
    <div
      class="scrollbar-hide flex h-full w-full max-w-4xl flex-col overflow-y-scroll rounded-md bg-white"
    >
      <div class="grid flex-grow grid-cols-1 md:grid-cols-3">
        <main class="px-8 py-32 md:col-span-2 md:px-12">
          <slot />
        </main>
        <Drawer />
      </div>
      <Footer />
    </div>
    <script defer data-domain="bfreeman.me" src="https://plausible.io/js/script.js"></script>
  </body>
</html>
