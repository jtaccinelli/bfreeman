---
import Icon from "astro-icon";
import Header from "./header.astro";
---

<div
  class:list={[
    "fixed inset-x-4 top-4 z-40 rounded-md",
    "flex items-center justify-between p-4",
    "bg-white/70 backdrop-blur",
    "md:hidden",
  ]}
>
  <p class="pl-4 font-semibold">Beth Freeman</p>
  <label
    for="drawer-state"
    role="button"
    class:list={[
      "flex h-12 w-12 items-center justify-center",
      "rounded-full bg-gray-100 md:hidden",
    ]}
  >
    <Icon name="menu" class="h-6 w-6" />
  </label>
</div>

<div class="pointer-events-none fixed inset-0 z-50 flex flex-col md:static">
  <input type="checkbox" id="drawer-state" class="peer hidden" />
  <label
    for="drawer-state"
    role="button"
    class:list={[
      "absolute inset-0",
      "bg-black/50 opacity-0",
      "transition-all duration-300",
      "hover:cursor-pointer",
      "peer-checked:pointer-events-auto peer-checked:opacity-100",
      "md:hidden",
    ]}
  >
  </label>
  <label
    for="drawer-state"
    role="button"
    class:list={[
      "pointer-events-auto absolute left-4 top-4",
      "flex h-12 w-12 items-center justify-center",
      "rounded-full bg-black text-white opacity-0",
      "transition-all duration-300",
      "peer-checked:opacity-100",
      "md:hidden",
    ]}
  >
    <Icon name="x" class="h-6 w-6" />
  </label>
  <div
    class:list={[
      "pointer-events-auto",
      "absolute inset-y-0 -right-full",
      "h-full",
      "transition-all duration-300",
      "peer-checked:right-0",
      "md:static",
    ]}
  >
    <Header />
  </div>
</div>
