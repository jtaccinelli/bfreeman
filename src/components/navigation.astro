---
type Links = {
  title: string;
  href: string;
}[];

const links: Links = [
  { title: "Home", href: "/" },
  { title: "About", href: "/about" },
  { title: "Work", href: "/work" },
  { title: "Samples", href: "/samples" },
];
---

<nav class="flex flex-col items-end gap-2">
  {
    links.map((link) => (
      <a
        href={link.href}
        class:list={[
          "relative flex items-center gap-2 transition-all",
          "after:absolute after:-right-8 after:bottom-0 after:top-0 after:w-0.5 after:transition-all",
          "hover:text-gray-500 hover:after:bg-gray-300",
          "aria-current:font-semibold aria-current:text-main-600 aria-current:after:bg-main-500",
        ]}
      >
        {link.title}
      </a>
    ))
  }
</nav>
